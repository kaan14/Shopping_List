
<div class="jumbotron jumbotron-fluid">
  <div class="container">
      {{!-- <img src="../public/assets/images/shopingcart.png" width="60"> --}}
      <img src="assets/images/shopingcart.jpeg" width="60">
    <h1 class="display-4">Let Us Keep Your Shopping List For You</h1>
    <p class="lead">Shopping never been this easy before</p>
  </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-sm">
            <h1>Will Buy</h1>
            <ul>
                {{#each willBuy}}
                <li>{{this.item}}

                    <div class="form-check item-li"> 
                        <input class="form-check-input do" type="button" value="done" data-id={{id}} {{bindAttr checked="isChecked" }}>
                    </div>   
                </li>
                <br/>

                {{/each}}
                </ul>
                 </div> 
                <div class="col-sm">
                    <h1>Done</h1>
            <ul id="listDone">
                {{#each done}}
                <li>{{this.item}}

                    <div class="form-check item-li">
                        <input class="form-check-input" type="button" value="delete" class="delete" data-id={{id}} {{bindAttr checked="isChecked" }}>
                        <label class="form-check-label" for="defaultCheck1">
                        </label>
                        </div>
                </li>

                {{/each}}
                </ul>
                </div>                  
                </div>

                <div>
                    {{#if done}}
                    <li>{{this.item}}</li>
                    {{/if}}
                </div>
        </div>
        <div class="col-sm">
            <div class="form-group col-md-6">
                <label for="inputNewItem"><h2>Add New Item</h2></label>
                <p>To enter new item, hit "Enter", </p>
                <input type="text" class="form-control" id="inputNewItem">
                <p id="sth">Get this</p>
                <input type="submit" id="btnSubmit" name="button">
            </div>
        </div>
    </div>

    <script src="../assets/js/main.js"></script>